{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ article.state }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ article.localisation }}</td>
            </tr>
            <tr>
                <th>Fabrication_date</th>
                <td>{{ article.fabricationDate ? article.fabricationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ article.brand }}</td>
            </tr>
            <tr>
                <th>Codebar</th>
                <td>{{ article.codebar }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">back to list</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
